<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivWeatherIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/weather_icon" />

            <TextView
                android:id="@+id/tvWeatherTimer"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="98dp"
                android:layout_toEndOf="@+id/ivWeatherIcon"
                android:text="@string/weather_timer"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWeatherTemp"
                android:layout_width="88dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="224dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/ivWeatherIcon"
                android:text="@string/weather_temperature"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvWeatherDesc"
                android:layout_width="197dp"
                android:layout_height="46dp"
                android:layout_below="@+id/tvWeatherTimer"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="96dp"
                android:layout_marginBottom="27dp"
                android:layout_toEndOf="@+id/ivWeatherIcon"
                android:text="@string/weather_description"
                android:textStyle="bold" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>